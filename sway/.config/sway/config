# Read `man 5 sway` for a complete reference.

# Autostarts
exec xsettingsd
exec dex -a -s :~/.config/autostart/ # Launch desktop entries
exec wlr-sunclock \
    --margins "5,5,5,5" \
    --width 200 \
    --layer bottom \
    --anchors tr \
    --border-width 0 \
    --colour-ocean "#0abdc6" \
    --colour-land "#bb00cc"

set $gnome-schema org.gnome.desktop.interface

exec_always {
    gsettings set $gnome-schema gtk-theme 'materia-cyberpunk-neon'
    gsettings set $gnome-schema icon-theme 'Ultimate-Punk-Suru++'
    gsettings set $gnome-schema cursor-theme 'Ultimate-PUNK-Cyan-Cursor'
    gsettings set $gnome-schema font-name 'Hack 10'
    gsettings set org.gnome.settings-daemon.plugins.media-keys max-screencast-length 600
    gsettings set org.gnome.mutter.wayland xwayland-grab-access-rules "['Remmina', 'VirtualBox Machine']"
    gsettings set org.gnome.desktop.interface gtk-enable-primary-paste false
}

