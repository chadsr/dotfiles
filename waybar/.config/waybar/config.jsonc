// -*- mode: json -*-
{
    "layer": "top", // Waybar at top layer
    "position": "top",
    "height": 24, // Waybar height (to be removed for auto height)
    // Choose the order of the modules
    "modules-left": [
        "group/workspaces",
        "custom/right-spacer-workspaces",
        "group/tray",
        "custom/right-spacer-tray"
    ],
    "modules-center": [
        "custom/left-spacer-organisation",
        "group/organisation",
        "custom/right-spacer-organisation",
        "group/information",
        "custom/right-spacer-information"
    ],
    "modules-right": [
        "custom/left-spacer-audio",
        "pulseaudio",
        "group/hardware",
        "custom/right-spacer-hardware",
        "group/network",
        "backlight",
        "battery",
        "custom/logout"
        // "custom/swaync"
    ],
    "custom/right-spacer-workspaces": {
        "format": "ÓÇ∞",
        "tooltip": false
    },
    "custom/right-spacer-tray": {
        "format": "‚ñì‚ñí‚ñë",
        "tooltip": false
    },
    "custom/left-spacer-organisation": {
        "format": "‚ñë‚ñí‚ñì",
        "tooltip": false
    },
    "custom/right-spacer-organisation": {
        "format": "ÓÇ∞",
        "tooltip": false
    },
    "custom/right-spacer-information": {
        "format": "‚ñì‚ñí‚ñë",
        "tooltip": false
    },
    "custom/left-spacer-audio": {
        "format": "‚ñë‚ñí‚ñì",
        "tooltip": false
    },
    "custom/right-spacer-hardware": {
        "format": "ÓÇ∞",
        "tooltip": false
    },
    "sway/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "format": "{name} {icon}",
        "format-icons": {
            "urgent": "ÔÅ™",
            "focused": "ÔÜí",
            "default": "ÔÑë"
        }
    },
    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "format": "{name} {icon}",
        "on-click": "activate",
        "format-icons": {
            "urgent": "ÔÅ™",
            "active": "ÔÜí",
            "default": "ÔÑë"
        }
    },
    "wlr/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "format": "{name} {icon}",
        "on-click": "activate",
        "format-icons": {
            "urgent": "ÔÅ™",
            "active": "ÔÜí",
            "default": "ÔÑë"
        }
    },
    "sway/mode": {
        "format": "Ôóº <span style=\"italic\">{}</span>"
    },
    "idle_inhibitor": {
        "tooltip": false,
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },
    "group/workspaces": {
        "orientation": "horizontal",
        "children-class": "group-workspaces",
        "modules": [
            "sway/workspaces",
            "wlr/workspaces",
            "hyprland/workspaces",
            "sway/mode",
            "idle_inhibitor"
        ]
    },
    "tray": {
        "icon-size": 16,
        "spacing": 8,
        "show-passive-items": true
    },
    // "custom/yay": {
    //     "format": "{} üì¶",
    //     "tooltip": false,
    //     "interval": 600,
    //     "exec": "yay -Qu  | wc -l",
    //     "exec-if": "exit 0",
    //     "on-click": "alacritty -t 'Updating Packages' -e yay; pkill -SIGRTMIN+8 waybar",
    //     "signal": 8
    // },
    "custom/updates": {
        "format": "{} {icon}",
        "return-type": "json",
        "format-icons": {
            "has-updates": "Û±ç∑",
            "updated": ""
        },
        "on-click": "alacritty -t 'Updating Packages' -e yay",
        "exec-if": "which waybar-module-pacman-updates",
        "exec": "waybar-module-pacman-updates --no-zero-output"
    },
    "custom/yubikey": {
        "exec": "$HOME/.config/waybar/modules/yubikey/waybar-yubikey",
        "return-type": "json"
    },
    // "custom/systemd": {
    //     "format": "{icon} {}",
    //     "format-icons": {
    //         "ok": "‚úî",
    //         "failure": "‚úò"
    //     },
    //     "tooltip": true,
    //     "return-type": "json",
    //     "interval": 60,
    //     "exec": "$HOME/git/github.com/chadsr/waybar-systemd/waybar-systemd"
    // },
    "group/tray": {
        "orientation": "horizontal",
        "children-class": "group-tray",
        "modules": [
            "tray",
            // "custom/yay",
            "custom/updates",
            // "custom/systemd",
            "privacy",
            "gamemode",
            "custom/yubikey"
        ]
    },
    "clock": {
        "format": "{:%H:%M} ÔÄó",
        "format-alt": "{:%A, %B %d, %Y}",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
            "mode": "month",
            "mode-mon-col": 2,
            "weeks-pos": "right",
            "on-scroll": 3,
            "format": {
                "months": "<span color='#b4befe'><b>{}</b></span>",
                "days": "<span color='#b4befe'><b>{}</b></span>",
                "weeks": "<span color='#cba6f7'><b>W{}</b></span>",
                "weekdays": "<span color='#cba6f7'><b>{}</b></span>",
                "today": "<span color='#a6e3a1'><b><u>{}</u></b></span>"
            }
        },
        "actions": {
            "on-click-right": "mode",
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down"
        }
    },
    "custom/calendar": {
        "format": "{}",
        "tooltip": true,
        "interval": 300,
        "format-icons": {
            "default": "ÔÅ≥"
        },
        "exec": "$HOME/.config/waybar/modules/khal/waybar-khal",
        "return-type": "json"
    },
    "group/organisation": {
        "orientation": "horizontal",
        "children-class": "group-organisation",
        "modules": [
            "clock",
            "custom/calendar",
            "mpris",
            "cava"
        ]
    },
    "group/information": {
        "orientation": "horizontal",
        "children-class": "group-organisation",
        "modules": [
            "custom/weather",
            "custom/crypto"
        ]
    },
    "sway/window": {
        "format": "{}",
        "max-length": 128,
        "all-outputs": true,
        "offscreen-css": true,
        "offscreen-css-text": "(inactive)"
    },
    "temperature": {
        "interval": 5,
        "format": "{temperatureC}¬∞C Ôãâ",
        "tooltip-format": "CPU Temperature: {temperatureC}¬∞C",
        "hwmon-path": "/tmp/cpu_temperature",
        "critical-threshold": 85,
        "on-click": "coolercontrol"
    },
    "temperature#gpu": {
        "interval": 5,
        "format": "{temperatureC}¬∞C Ôãâ",
        "tooltip-format": "GPU Temperature: {temperatureC}¬∞C",
        "hwmon-path": "/tmp/gpu_temperature",
        "critical-threshold": 85,
        "on-click": "coolercontrol"
    },
    "cpu": {
        "format": "{usage}% Ôãõ",
        "interval": 5,
        "tooltip": true,
        "on-click": "corectrl"
    },
    "memory": {
        "format": "{}% ÔÉâ",
        "interval": 10,
        "tooltip": true,
        "on-click": "corectrl"
    },
    "disk": {
        "interval": 600,
        "format": "{percentage_used}% Û∞ãä",
        "path": "/"
    },
    "power-profiles-daemon": {
        "format": "{icon} {profile}",
        "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
        "tooltip": true,
        "format-icons": {
            "default": "ÔÉß",
            "performance": "ÔÉß",
            "balanced": "Ôâé",
            "power-saver": "ÔÅ¨"
        }
    },
    "group/hardware": {
        "orientation": "horizontal",
        "children-class": "group-hardware",
        "modules": [
            "temperature",
            "temperature#gpu",
            "cpu",
            "memory",
            "disk",
            "power-profiles-daemon"
        ],
        "drawer": {
            "transition-duration": 500,
            "children-class": "hardware",
            "transition-left-to-right": true
        }
    },
    "custom/weather": {
        "format": "{} ¬∞C",
        "tooltip": true,
        "interval": 3600,
        "exec": "wttrbar",
        "return-type": "json"
    },
    "custom/crypto": {
        "format": "{}",
        "interval": 600,
        "return-type": "json",
        "exec": "/usr/bin/waybar-crypto",
        "exec-if": "ping pro-api.coinmarketcap.com -c2",
        "tooltip": true
    },
    "backlight": {
        "format": "{percent}% {icon}",
        "format-icons": [
            "ÔÜÖ",
            "ÔÑë"
        ],
        "on-click": "nwg-displays"
    },
    "battery": {
        "bat": "BAT0",
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-charging": "{capacity}% Ôóß",
        "format-plugged": "{capacity}% Ôá¶",
        "format-alt": "{time} {power}W {icon}",
        "format-icons": [
            "ÔâÑ",
            "ÔâÉ",
            "ÔâÇ",
            "ÔâÅ",
            "ÔâÄ"
        ]
    },
    "network": {
        "interval": 5,
        "interface": "wlan0",
        "format-icons": [
            "Ôá´"
        ],
        "format-disconnected": "{icon}",
        "format-wifi": "{essid} {signalStrength}% ‚Üë{bandwidthUpBits} ‚Üì{bandwidthDownBits} {icon}",
        "tooltip-format": "WiFi ‚Üí {ifname} ‚Üí {ipaddr}/{cidr}",
        "on-click": "networkmanager_dmenu"
    },
    "network#vpn": {
        "interval": 5,
        "interface": "wg0",
        "format-icons": [
            "\uf023"
        ],
        "format-disconnected": "{icon}",
        "format": "VPN ‚Üë{bandwidthUpBits} ‚Üì{bandwidthDownBits} {icon}",
        "tooltip-format": "VPN ‚Üí {ifname} ‚Üí {ipaddr}/{cidr}",
        "on-click": "networkmanager_dmenu"
    },
    "bluetooth": {
        "format": "Ôäî {status}",
        "format-connected": "Ôäî {device_alias}",
        "format-connected-battery": "Ôäî {device_alias} {device_battery_percentage}%",
        // "format-device-preference": [ "device1", "device2" ], // preference list deciding the displayed device
        "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
        "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
        "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
        "tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t{device_battery_percentage}%",
        "on-click": "alacritty -e bluetuith"
    },
    "pulseaudio": {
        "scroll-step": 1,
        "format": "{volume}% {icon}",
        "format-bluetooth": "{volume}% {icon}Ôäî",
        "format-muted": "ÔÄ¶",
        "format-icons": {
            "headphones": "ÔÄ•",
            "handsfree": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": [
                "ÔÄß",
                "ÔÄ®"
            ]
        },
        "on-click": "pavucontrol"
    },
    "cava": {
        "cava_config": "$XDG_CONFIG_HOME/cava/cava.conf",
        "bars": 8,
        "bar_delimiter": 0,
        "format-icons": [
            "‚ñÅ",
            "‚ñÇ",
            "‚ñÉ",
            "‚ñÑ",
            "‚ñÖ",
            "‚ñÜ",
            "‚ñá",
            "‚ñà"
        ],
        "actions": {
            "on-click-right": "mode"
        }
    },
    "gamemode": {
        "format": "{glyph}",
        "format-alt": "{glyph} {count}",
        "glyph": "Ôû≥",
        "hide-not-running": true,
        "use-icon": true,
        "icon-name": "input-gaming-symbolic",
        "icon-spacing": 4,
        "icon-size": 20,
        "tooltip": true,
        "tooltip-format": "Games running: {count}"
    },
    "privacy": {
        "icon-spacing": 4,
        "icon-size": 18,
        "transition-duration": 250,
        "format-icons": {
            "screenshare": "üïµÔ∏è",
            "audio-in": "üëÇ"
        },
        "modules": [
            {
                "type": "screenshare",
                "tooltip": true,
                "tooltip-icon-size": 24
            },
            {
                "type": "audio-in",
                "tooltip": true,
                "tooltip-icon-size": 24
            }
        ]
    },
    "group/network": {
        "orientation": "horizontal",
        "children-class": "group-network",
        "modules": [
            "bluetooth",
            "network",
            "network#vpn"
        ],
        "drawer": {
            "transition-duration": 500,
            "children-class": "network",
            "transition-left-to-right": true
        }
    },
    "mpris": {
        "format": "{player_icon} {title} - {artist}",
        "format-paused": "{status_icon} <i>{title} - {artist}</i>",
        "interval": 5,
        "player-icons": {
            "default": "üéµ"
        },
        "status-icons": {
            "paused": "‚è∏"
        },
        "ignored-players": [
            "firefox",
            "chromium",
            "brave"
        ]
    },
    "custom/logout": {
        "tooltip": false,
        "format": "ÔÄë",
        "on-click": "wlogout"
    }
